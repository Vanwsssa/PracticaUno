<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="InteractÃºa con los elementos de selecciÃ³n y observa el resultado"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/checkBoxEstudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te estÃ¡ gustando estudiar Ing. en Sistemas Computacionales"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textDescripcion"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RadioGroup -->
    <RadioGroup
        android:id="@+id/radioGroupHelado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxEstudio"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioChocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate" />

        <RadioButton
            android:id="@+id/radioVanilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vanilla" />
    </RadioGroup>

    <!-- Switch -->
    <Switch
        android:id="@+id/switchTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo OscuroðŸŒ‘ / ClaroðŸŒ•"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupHelado"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TextView para mostrar resultados -->
    <TextView
        android:id="@+id/textResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/switchTema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>